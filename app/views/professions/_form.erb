<%= simple_form_for(profession, id: (profession.id ? dom_id(profession, :edit) : dom_id(Profession.new))) do |f| %>
  <% if profession.errors.any? %>
  <div class="error-message">
    <%= profession.errors.full_messages.to_sentence.capitalize %>
  </div>
  <% end %>
  <%= f.input :name, label: false, placeholder: 'profesie', input_html: { autofocus: true } %>
  <%= f.input :order, hint: 'poziția în pagina index cu echipa medicală', label: false, collection: 1...Profession.count + 1, prompt: 'alegerea ordinea afișării în pagină' %>
  <%= f.input :has_specialty, label: 'are specialitate medicală?' %>
  <button class="btn-custom btn-green btn-crud">Salvează</button>
<% end %>