<%= content_for :meta_title, 'Informări pentru pacient Spinal Care Bacău' %>
<%= content_for :meta_keywords, @facts.pluck(:name).sample(4).join(', ') %>
<div class="pacient-section__wall-photo" style="background-image: url('<%#= cl_image_path(bkg_photo, :quality=>80, :width=>800, :crop=>"scale") %>'); filter: grayscale(1) contrast(4) brightness(.5);"></div>
<div class="fact-section">
  <h2>Informare pacient</h2>
  <div class="btn-group dropdown-center">
    <button type="button" class="btn-drop dropdown-toggle !bg-orange-600 hover:!bg-orange-700 !text-white" data-bs-toggle="dropdown" aria-expanded="false">Selectează informația dorită</button>
    <ul class="dropdown-menu">
      <li><%= link_to 'Înapoi la index informări', info_pacient_index_path, class: 'dropdown-item btn-color' %></li>
      <% @all_facts.each do |fact| %>
        <li><%= link_to fact.name, "#{fact.slug}", class: 'dropdown-item btn-color' %></li>
      <% end %>
    </ul>
  </div>
  <div class="fact img-w-<%= @fact.custom_width %>">
    <h4 class="fs-3 mb-5 text-center h1"><%= @fact.name %></h4>
    <%= @fact.description %>
  </div>
</div>