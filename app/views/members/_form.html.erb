<div class="form">
  <h3>Adaugă un nou membru</h3>
  <%= simple_form_for @member do |f|%>
    <% if @member.errors.any? %>
      <div class="error-message">
        <%= @member.errors.full_messages.to_sentence.capitalize %>
      </div>
    <% end %>
    <%= f.input :first_name, label: false, placeholder: 'Prenume' %>
    <%= f.input :last_name, label: false, placeholder: 'Nume' %>
    <%= f.input :photo, label: false %>
    <%= f.input :profession_id, collection: @professions, prompt: 'Alege profesia', label: false %>
    <%= f.input :specialty_id, collection: @specialties, prompt: 'Alege specialitatea medicală', label: false %>
    <p>Despre</p>
    <%= f.rich_text_area :description %>
    <%= f.submit 'Trimite' %>
  <% end %>
</div>