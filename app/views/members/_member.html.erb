<div class="member-container">
  <div class="member-container__main" data-controller="bio">
    <div class="member-card">
      <div class="member-card__back"></div>
      <div class="member-card__photo-holder" style="background-image: url('<%= cl_image_path @member.photo.key if @member.photo.key.present? %>');"></div>
        <div class="member-card-info" >
          <p><%= full_name(@member) %></p>
          <span><%= @member.profession.name %></span>
          <% unless @member.specialty.nil? %>
            <%= link_to "../specialitati-medicale/#{@member.specialty.slug}" do %>
              <%= @member.specialty.name %>
            <% end %>
          <% end %>
        </div>
    </div>
    <div class="member-bio" data-bio-target="bio">
      <%= @member.description %>
    </div>
    <span id="member-bio__more" data-bio-target="more">â¬‡</span>
  </div>
  <%= image_tag('wave-home-page.svg', class: 'member-page-wave') %>
  <!-- <h1><%= full_name(@member) %></h1> -->
</div>