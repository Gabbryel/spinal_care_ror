  <% if current_page?('/servicii-medicale') %>
    <div class="services-main section-main" data-controller="tooltip">
      <%= render partial: "admin/medical_services/render_medical_services" %>
    </div>
  <% elsif access && current_page?('/dashboard/servicii-medicale') %>
    <div class="medical-services-dashboard">
      <div class="services-header">
        <h1>Servicii Medicale</h1>
        <span class="services-count"><%= @specialties.count %> <%= @specialties.count == 1 ? 'specialitate' : 'specialități' %></span>
      </div>

      <div class="specialties-grid">
        <% @specialties.sort_by { |s| s.name }.each do |specialty| %>
          <%= link_to admin_specialty_path(specialty), class: 'specialty-card' do %>
            <div class="specialty-icon">
              <% if specialty.photo.attached? %>
                <%= cl_image_tag specialty.photo.key, width: 80, height: 80, crop: :fill %>
              <% else %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 3.104v5.714a2.25 2.25 0 01-.659 1.591L5 14.5M9.75 3.104c-.251.023-.501.05-.75.082m.75-.082a24.301 24.301 0 014.5 0m0 0v5.714c0 .597.237 1.17.659 1.591L19.8 15.3M14.25 3.104c.251.023.501.05.75.082M19.8 15.3l-1.57.393A9.065 9.065 0 0112 15a9.065 9.065 0 00-6.23-.693L5 14.5m14.8.8l1.402 1.402c1.232 1.232.65 3.318-1.067 3.611A48.309 48.309 0 0112 21c-2.773 0-5.491-.235-8.135-.687-1.718-.293-2.3-2.379-1.067-3.61L5 14.5" />
                </svg>
              <% end %>
            </div>
            <div class="specialty-info">
              <h3><%= specialty.name %></h3>
              <p class="service-count"><%= specialty.medical_services.count %> <%= specialty.medical_services.count == 1 ? 'serviciu' : 'servicii' %></p>
            </div>
            <div class="specialty-arrow">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
              </svg>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% else %>
      <%= no_access %>
  <% end %>
  

