<% if access %>
  <div class="main-dashboard">
    <div class="dashboard-header">
      <div class="header-content">
        <h1>Bine ai venit, <%= current_user.email.split('@').first.capitalize %>!</h1>
        <p class="dashboard-subtitle">Alege o secțiune pentru a gestiona conținutul</p>
      </div>
      <div class="header-actions">
        <%= link_to root_path, class: 'header-btn' do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
          </svg>
          Pagina publică
        <% end %>
      </div>
    </div>

    <div class="dashboard-grid">
      <!-- Users Management Card -->
      <%= link_to dashboard_users_path, class: 'dashboard-card dashboard-card--purple' do %>
        <div class="card-icon">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <path d="M4.5 6.375a4.125 4.125 0 118.25 0 4.125 4.125 0 01-8.25 0zM14.25 8.625a3.375 3.375 0 116.75 0 3.375 3.375 0 01-6.75 0zM1.5 19.125a7.125 7.125 0 0114.25 0v.003l-.001.119a.75.75 0 01-.363.63 13.067 13.067 0 01-6.761 1.873c-2.472 0-4.786-.684-6.76-1.873a.75.75 0 01-.364-.63l-.001-.122zM17.25 19.128l-.001.144a2.25 2.25 0 01-.233.96 10.088 10.088 0 005.06-1.01.75.75 0 00.42-.643 4.875 4.875 0 00-6.957-4.611 8.586 8.586 0 011.71 5.157v.003z" />
          </svg>
        </div>
        <div class="card-content">
          <h3>Utilizatori</h3>
          <p>Gestionează admini și permisiuni</p>
          <div class="card-stats">
            <span class="stat-badge"><%= User.count %> utilizatori</span>
            <span class="stat-badge"><%= User.where(admin: true).count %> admini</span>
          </div>
        </div>
        <div class="card-arrow">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
          </svg>
        </div>
      <% end %>

      <!-- Team Members Card -->
      <%= link_to dashboard_personal_path, class: 'dashboard-card dashboard-card--orange' do %>
        <div class="card-icon">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <path fill-rule="evenodd" d="M7.5 6a4.5 4.5 0 119 0 4.5 4.5 0 01-9 0zM3.751 20.105a8.25 8.25 0 0116.498 0 .75.75 0 01-.437.695A18.683 18.683 0 0112 22.5c-2.786 0-5.433-.608-7.812-1.7a.75.75 0 01-.437-.695z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="card-content">
          <h3>Personal</h3>
          <p>Gestionează membrii echipei</p>
          <div class="card-stats">
            <span class="stat-badge"><%= Member.count %> membri</span>
            <span class="stat-badge"><%= Profession.count %> profesii</span>
          </div>
        </div>
        <div class="card-arrow">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
          </svg>
        </div>
      <% end %>

      <!-- Professions Card -->
      <%= link_to admin_professions_path, class: 'dashboard-card dashboard-card--indigo' do %>
        <div class="card-icon">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <path fill-rule="evenodd" d="M7.502 6h7.128A3.375 3.375 0 0118 9.375v9.375a3 3 0 003-3V6.108c0-1.505-1.125-2.811-2.664-2.94a48.972 48.972 0 00-.673-.05A3 3 0 0015 1.5h-1.5a3 3 0 00-2.663 1.618c-.225.015-.45.032-.673.05C8.662 3.295 7.554 4.542 7.502 6zM13.5 3A1.5 1.5 0 0012 4.5h4.5A1.5 1.5 0 0015 3h-1.5z" clip-rule="evenodd" />
            <path fill-rule="evenodd" d="M3 9.375C3 8.339 3.84 7.5 4.875 7.5h9.75c1.036 0 1.875.84 1.875 1.875v11.25c0 1.035-.84 1.875-1.875 1.875h-9.75A1.875 1.875 0 013 20.625V9.375zM6 12a.75.75 0 01.75-.75h.008a.75.75 0 01.75.75v.008a.75.75 0 01-.75.75H6.75a.75.75 0 01-.75-.75V12zm2.25 0a.75.75 0 01.75-.75h3.75a.75.75 0 010 1.5H9a.75.75 0 01-.75-.75zM6 15a.75.75 0 01.75-.75h.008a.75.75 0 01.75.75v.008a.75.75 0 01-.75.75H6.75a.75.75 0 01-.75-.75V15zm2.25 0a.75.75 0 01.75-.75h3.75a.75.75 0 010 1.5H9a.75.75 0 01-.75-.75zM6 18a.75.75 0 01.75-.75h.008a.75.75 0 01.75.75v.008a.75.75 0 01-.75.75H6.75a.75.75 0 01-.75-.75V18zm2.25 0a.75.75 0 01.75-.75h3.75a.75.75 0 010 1.5H9a.75.75 0 01-.75-.75z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="card-content">
          <h3>Profesii</h3>
          <p>Gestionează profesiile medicale</p>
          <div class="card-stats">
            <span class="stat-badge"><%= Profession.count %> profesii</span>
          </div>
        </div>
        <div class="card-arrow">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
          </svg>
        </div>
      <% end %>

      <!-- Specialties Card -->
      <%= link_to admin_specialties_path, class: 'dashboard-card dashboard-card--green' do %>
        <div class="card-icon">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <path d="M11.7 2.805a.75.75 0 01.6 0A60.65 60.65 0 0122.83 8.72a.75.75 0 01-.231 1.337 49.949 49.949 0 00-9.902 3.912l-.003.002-.34.18a.75.75 0 01-.707 0A50.009 50.009 0 007.5 12.174v-.224c0-.131.067-.248.172-.311a54.614 54.614 0 014.653-2.52.75.75 0 00-.65-1.352 56.129 56.129 0 00-4.78 2.589 1.858 1.858 0 00-.859 1.228 49.803 49.803 0 00-4.634-1.527.75.75 0 01-.231-1.337A60.653 60.653 0 0111.7 2.805z" />
            <path d="M13.06 15.473a48.45 48.45 0 017.666-3.282c.134 1.414.22 2.843.255 4.285a.75.75 0 01-.46.71 47.878 47.878 0 00-8.105 4.342.75.75 0 01-.832 0 47.877 47.877 0 00-8.104-4.342.75.75 0 01-.461-.71c.035-1.442.121-2.87.255-4.286A48.4 48.4 0 016 13.18v1.27a1.5 1.5 0 00-.14 2.508c-.09.38-.222.753-.397 1.11.452.213.901.434 1.346.661a6.729 6.729 0 00.551-1.608 1.5 1.5 0 00.14-2.67v-.645a48.549 48.549 0 013.44 1.668 2.25 2.25 0 002.12 0z" />
            <path d="M4.462 19.462c.42-.419.753-.89 1-1.394.453.213.902.434 1.347.661a6.743 6.743 0 01-1.286 1.794.75.75 0 11-1.06-1.06z" />
          </svg>
        </div>
        <div class="card-content">
          <h3>Specialități medicale</h3>
          <p>Gestionează specialitățile</p>
          <div class="card-stats">
            <span class="stat-badge"><%= Specialty.count %> specialități</span>
          </div>
        </div>
        <div class="card-arrow">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
          </svg>
        </div>
      <% end %>

      <!-- Medical Services Card -->
      <%= link_to admin_medical_services_path, class: 'dashboard-card dashboard-card--teal' do %>
        <div class="card-icon">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <path fill-rule="evenodd" d="M10.5 3.75a6 6 0 00-5.98 6.496A5.25 5.25 0 006.75 20.25H18a4.5 4.5 0 002.206-8.423 3.75 3.75 0 00-4.133-4.303A6.001 6.001 0 0010.5 3.75zm2.25 6a.75.75 0 00-1.5 0v4.94l-1.72-1.72a.75.75 0 00-1.06 1.06l3 3a.75.75 0 001.06 0l3-3a.75.75 0 10-1.06-1.06l-1.72 1.72V9.75z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="card-content">
          <h3>Servicii medicale</h3>
          <p>Gestionează serviciile oferite</p>
          <div class="card-stats">
            <span class="stat-badge"><%= MedicalService.count %> servicii</span>
          </div>
        </div>
        <div class="card-arrow">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
          </svg>
        </div>
      <% end %>

      <!-- Patient Info Card -->
      <%= link_to dashboard_info_pacient_path, class: 'dashboard-card dashboard-card--blue' do %>
        <div class="card-icon">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <path fill-rule="evenodd" d="M2.25 12c0-5.385 4.365-9.75 9.75-9.75s9.75 4.365 9.75 9.75-4.365 9.75-9.75 9.75S2.25 17.385 2.25 12zm8.706-1.442c1.146-.573 2.437.463 2.126 1.706l-.709 2.836.042-.02a.75.75 0 01.67 1.34l-.04.022c-1.147.573-2.438-.463-2.127-1.706l.71-2.836-.042.02a.75.75 0 11-.671-1.34l.041-.022zM12 9a.75.75 0 100-1.5.75.75 0 000 1.5z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="card-content">
          <h3>Informații pacienți</h3>
          <p>Gestionează informările pentru clienți</p>
          <div class="card-stats">
            <span class="stat-badge"><%= Fact.count %> informații</span>
          </div>
        </div>
        <div class="card-arrow">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
          </svg>
        </div>
      <% end %>

      <!-- Quick Stats Card -->
      <div class="dashboard-stats-card">
        <h3>Statistici rapide</h3>
        <div class="stats-grid">
          <div class="stat-item">
            <div class="stat-value"><%= Member.count %></div>
            <div class="stat-label">Membri echipă</div>
          </div>
          <div class="stat-item">
            <div class="stat-value"><%= MedicalService.count %></div>
            <div class="stat-label">Servicii</div>
          </div>
          <div class="stat-item">
            <div class="stat-value"><%= Specialty.count %></div>
            <div class="stat-label">Specialități</div>
          </div>
          <div class="stat-item">
            <div class="stat-value"><%= User.count %></div>
            <div class="stat-label">Utilizatori</div>
          </div>
        </div>
      </div>

      <!-- Recent Activity Card -->
      <div class="dashboard-activity-card">
        <h3>Activitate recentă</h3>
        <div class="activity-list">
          <% recent_facts = Fact.order(updated_at: :desc).limit(3) %>
          <% recent_members = Member.order(updated_at: :desc).limit(2) %>
          
          <% if recent_facts.any? %>
            <% recent_facts.each do |fact| %>
              <div class="activity-item">
                <div class="activity-icon activity-icon--blue">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a.75.75 0 000 1.5h.253a.25.25 0 01.244.304l-.459 2.066A1.75 1.75 0 0010.747 15H11a.75.75 0 000-1.5h-.253a.25.25 0 01-.244-.304l.459-2.066A1.75 1.75 0 009.253 9H9z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="activity-content">
                  <div class="activity-title"><%= fact.name %></div>
                  <div class="activity-time">Actualizat <%= time_ago_in_words(fact.updated_at) %></div>
                </div>
              </div>
            <% end %>
          <% end %>

          <% if recent_members.any? %>
            <% recent_members.each do |member| %>
              <div class="activity-item">
                <div class="activity-icon activity-icon--orange">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M10 8a3 3 0 100-6 3 3 0 000 6zM3.465 14.493a1.23 1.23 0 00.41 1.412A9.957 9.957 0 0010 18c2.31 0 4.438-.784 6.131-2.1.43-.333.604-.903.408-1.41a7.002 7.002 0 00-13.074.003z" />
                  </svg>
                </div>
                <div class="activity-content">
                  <div class="activity-title"><%= member.first_name %> <%= member.last_name %></div>
                  <div class="activity-time">Actualizat <%= time_ago_in_words(member.updated_at) %></div>
                </div>
              </div>
            <% end %>
          <% end %>

          <% if recent_facts.empty? && recent_members.empty? %>
            <p class="no-activity">Nicio activitate recentă</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <%= no_access %>
<% end %>
