<div class="modal fade specialty-modal" id="<%= modal_id %>" tabindex="-1" aria-labelledby="<%= modal_id %>Label" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content modern-modal-content">
      <div class="modal-header modern-modal-header">
        <div class="modal-title-wrapper">
          <div class="modal-icon">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <div>
            <h1 class="modal-title" id="<%= modal_id %>Label">
              <%= new ? 'Adaugă specialitate nouă' : 'Editează specialitate' %>
            </h1>
            <p class="modal-subtitle">
              <%= new ? 'Completează detaliile pentru noua specialitate medicală' : 'Modifică informațiile specialității' %>
            </p>
          </div>
        </div>
        <button type="button" class="modern-close-btn" data-bs-dismiss="modal" aria-label="Close">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <div class="modal-body modern-modal-body">
        <%= render partial: "specialties/form", locals: {specialty: specialty} %>
      </div>
    </div>
  </div>
</div>