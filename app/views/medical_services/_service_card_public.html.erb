<div class="service-card-public" data-controller="tooltip">
  <div class="service-header-public">
    <div class="service-name-wrapper">
      <h3 class="service-name-public"><%= medical_service.name %></h3>
      <% if medical_service.description.present? %>
        <%= tag.span data: { tooltip_target: 'trigger'}, class: 'info-icon-public' do %>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <path fill-rule="evenodd" d="M2.25 12c0-5.385 4.365-9.75 9.75-9.75s9.75 4.365 9.75 9.75-4.365 9.75-9.75 9.75S2.25 17.385 2.25 12zm8.706-1.442c1.146-.573 2.437.463 2.126 1.706l-.709 2.836.042-.02a.75.75 0 01.67 1.34l-.04.022c-1.147.573-2.438-.463-2.127-1.706l.71-2.836-.042.02a.75.75 0 11-.671-1.34l.041-.022zM12 9a.75.75 0 100-1.5.75.75 0 000 1.5z" clip-rule="evenodd" />
          </svg>
        <% end %>
        <div class="service-tooltip-public" data-tooltip-target="description">
          <%= medical_service.description %>
        </div>
      <% end %>
    </div>
    <% if medical_service.has_day_hospitalization %>
      <%= link_to 'specialitati-medicale/spitalizare-de-zi', class: 'hospitalization-badge-public' do %>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12.378 1.602a.75.75 0 00-.756 0L3 6.632l9 5.25 9-5.25-8.622-5.03zM21.75 7.93l-9 5.25v9l8.628-5.032a.75.75 0 00.372-.648V7.93zM11.25 22.18v-9l-9-5.25v8.57a.75.75 0 00.372.648l8.628 5.033z" />
        </svg>
        Spitalizare de zi
      <% end %>
    <% end %>
  </div>
  <div class="service-price-public">
    <% if medical_service.price == 0 %>
      <span class="price-contact-public">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
          <path fill-rule="evenodd" d="M1.5 4.5a3 3 0 013-3h1.372c.86 0 1.61.586 1.819 1.42l1.105 4.423a1.875 1.875 0 01-.694 1.955l-1.293.97c-.135.101-.164.249-.126.352a11.285 11.285 0 006.697 6.697c.103.038.25.009.352-.126l.97-1.293a1.875 1.875 0 011.955-.694l4.423 1.105c.834.209 1.42.959 1.42 1.82V19.5a3 3 0 01-3 3h-2.25C8.552 22.5 1.5 15.448 1.5 6.75V4.5z" clip-rule="evenodd" />
        </svg>
        Sună pentru preț
      </span>
    <% else %>
      <span class="price-amount-public"><%= medical_service.price %> <span class="currency-public">lei</span></span>
    <% end %>
  </div>
</div>
