<div>
  <%= render(partial: 'admin/medical_services/medical_service_info', locals: { medical_service: medical_service }) %>
  <div class="grid grid-cols-10">
    <span class="col-span-8 max-h-max mb-[1rem]">
      <%= medical_service.name %>
      <br>
      <% if medical_service.has_day_hospitalization %>
        <%= link_to 'specialitati-medicale/spitalizare-de-zi' do %>
          <span class="badge bg-color-1">🏥 spitalizare de zi</span>
        <% end %>
      <% end %>
    </span>
    <span class="col-span-2 text-end">
      <%= medical_service.price == 0 ? action_btn('📞', nil, nil) : "#{medical_service.price} lei" %>
    </span>
  </div>
  <% if access %>
    <%= render(partial: 'admin/medical_services/medical_service_policy', locals: { medical_service: medical_service }) %>
  <% end %>

</div>
