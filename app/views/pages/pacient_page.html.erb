<%= content_for :meta_title, 'Informații pentru Pacient - Spinal Care Bacău' %>
<%= content_for :meta_keywords, @facts.pluck(:name).sample(4).join(', ') %>

<div class="modern-pacient-page">
  <!-- Hero Section -->
  <div class="pacient-hero">
    <div class="pacient-hero-overlay"></div>
    <div class="pacient-hero-image" style="background-image: url('<%= cl_image_path("www.sysphotodesign.ro_10_w9nw5g.webp", :quality=>70, :fetch_format=>:auto, :width=>1200) %>');"></div>
    <div class="pacient-hero-content">
      <h1>Spinal Care Bacău</h1>
      <p class="hero-subtitle">Clinică medicală</p>
      <p class="hero-motto">Mâinile care te pun pe picioare!</p>
    </div>
  </div>

  <!-- Main Content -->
  <div class="pacient-content">
    <!-- Patient Info Link -->
    <div class="info-card highlight-card">
      <%= link_to "info-pacient/#{@facts[0].slug}", class: 'info-link-card' do %>
