<div class="main-specialities">
  <div class="main-specialities-intro">
    <p><span>Specialități medicale</span><br> în cadrul <span>clinicii Spinal Care</span></p>
  </div>
  <div class="main-specialities-index">
    <% specialities.each_with_index do |sp, i| %>
      <%= link_to '#' do %>
        <div class="speciality-card" style="transition: <%=i + 0.5%>s;" data-controller="animation" data-action="scroll@window->animation#svgscroll">
            <p><%= sp[:name] %></p>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= image_tag('wave-home-page') %>
</div>