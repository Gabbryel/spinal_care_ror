<div class="main-attractions">
  <div id="main-attractions-motto">
    <p>De ce Spinal Care?</p>
  </div>
  <div id="main-attractions-cards">
    <% cards.each_with_index do |c, i| %>
      <div class="info-card" data-controller="animation" data-action="scroll@window->animation#svgscroll" style="transition: <%=i + 0.5%>s">
        <div class="info-card_icon" >
          <%= c[:icon].html_safe %>
        </div>
        <div class="info-card_title"><p><%= c[:title] %> </p></div>
        <div class="info-card_main">
          <p><%= c[:content] %> </p>
        </div>
        <%= link_to 'Vezi mai multe...', "#" %>
      </div>
    <% end %>
  </div>
</div>