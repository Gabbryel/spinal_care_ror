<section title="sectiune selectie doctori" class="relative w-full px-0 max-sm:mt-[3rem] mt-[6rem] row-span-1 row-start-5 col-span-full col-start-1">
  <%#= title('Medicii Spinal Care', 'section-title-blue__reverse', 'section-title-text__reverse') %>
  <div title="selectie medici" class="relative <%= "#{div_widths} #{gaps_for_indexes}" %>  my-0 mx-auto grid grid-cols-[repeat(auto-fit,minmax(280px,1fr))] justify-center px-3 pb-[6rem]">
    <div class="relative h-full grid grid-cols-1 grid-rows-1 items-center justify-items-center">
      <h2 class="text-center text-4xl word-wrap font-bold px-2 py-2 font-poppins max-sm:mb-[4rem]">Medicii Spinal Care</h2>
    </div>
    <% @medics.each_with_index do |m, i| %>
      <%= render partial: "members/member_card", locals: {m: m, i: i, not_animated: nil, no_grid_area: 'no_grid_area'} %>
    <% end %>
    <div class="relative h-full grid grid-cols-1 grid-rows-1 items-center justify-items-center max-lg:mt-[4rem] max-lg:col-span-full max-lg:col-start-1 2xl:col-span-full 2xl:col-start-1 2xl:mt-[4rem]">
      <h2 class="text-center text-4xl word-wrap font-bold px-2 py-2 font-poppins"><%= see_the_team(nil) %></h2>
    </div>
  </div>
  <!-- <div class="home_specialists_link">
    <p><%= see_the_team(nil) %></p>
  </div> -->
</section>