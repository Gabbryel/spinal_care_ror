<%= content_for :meta_title, 'Resetare Parolă - Spinal Care' %>

<div class="modern-auth-page">
  <div class="auth-hero">
    <div class="auth-hero-content">
      <h1>Ai uitat parola?</h1>
      <p>Vei primi instrucțiuni pe email</p>
    </div>
  </div>

  <div class="auth-content">
    <div class="auth-card">
      <div class="auth-card-header">
        <h2>Resetare parolă</h2>
        <p class="auth-subtitle">Introdu adresa de email asociată contului tău</p>
      </div>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'auth-form' }) do |f| %>
        <%= f.error_notification %>

        <div class="form-group">
          <%= f.input :email,
                      label: 'Email',
                      placeholder: 'nume@exemplu.ro',
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: 'auth-input' },
                      wrapper_html: { class: 'auth-input-wrapper' } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Trimite instrucțiuni", class: 'auth-submit-btn' %>
        </div>
      <% end %>

      <div class="auth-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

