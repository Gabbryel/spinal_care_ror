<div class="form-container">
  <div class="form-container_a">
    <h2>Cont de admin</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    label: false,
                    placeholder: 'adresa de email',
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    label: false,
                    placeholder: '*******',
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, label: 'Recunoaștere automată', as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Intră în cont" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
    <p>*Contul va fi validat de un admin! După validare vei avea drepturi de acces!</p>
  </div>

</div>

